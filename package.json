{
  "name": "ucrypt-ts",
  "module": "dist/index.js",
  "version": "1.6.2",
  "type": "module",
  "files": ["dist"],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "test": "bun run --watch test/index.ts",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "build": "rimraf dist && npx tsc --outDir dist && bun pm pack --filename ucrypt.tgz",
    "pub": "rimraf ucrypt.tgz && bun run build && bun publish --production",
    "check": "eslint --config eslint.config.js \"src/**/*.{ts,js}\" && prettier --check \"src/**/*.{ts,js}\"",
    "check:fix": "eslint --config eslint.config.js --fix \"{src,test,frontend}/**/*.{ts,js}\"",
    "docs": "cd docs && bundle exec jekyll serve --watch --livereload"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bun": "latest",
    "@types/node": "^22.15.30",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.1.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "rimraf": "^6.0.1"
  }
}
